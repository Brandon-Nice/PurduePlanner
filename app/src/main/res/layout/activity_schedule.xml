<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tableLayout"></TableLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calendarTitle"
        android:layout_gravity="center_horizontal"
        android:text="Calendar View"
        android:editable="false" />

    <CalendarView
        android:layout_width="match_parent"
        android:layout_height="352dp"
        android:id="@+id/calendarView"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/calendarTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View All Classes"
        android:id="@+id/thursdayButton"
        android:onClick="buttonOnClick"
        android:layout_below="@+id/calendarView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Selected date goes here"
        android:id="@+id/selected_date"
        android:layout_below="@+id/thursdayButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>